{% block body %}
<body style="position: relative; min-height:100vh; margin: 0; font-family: sans-serif; ">
    <nav style="background-color: #a05444; padding-top: 20px; padding-left: 140px; padding-bottom: 20px; display: flex; align-items: flex-start;">
        <button style="color: #a05444; border-color: white; width:150px; height:60px;">LOGO</button>
        <h2 style="padding-left: 110px; font-weight: 1;"><a href="" style="color:white;"><u>Accueil</u></a></h2>
    </nav>

    <div style="padding-left: 140px; padding-top: 20px;">
        <h1>Connectez-vous</h1>
        <p>Email</p>
